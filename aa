local GUI = Instance.new("ScreenGui")
local Main = Instance.new("Frame")
local Text = Instance.new("TextLabel")
local CopyButton = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

GUI.Name = "GUI"
GUI.Parent = game.CoreGui  -- Делаем GUI поверх всех окон

Main.Name = "Main"
Main.Parent = GUI
Main.BackgroundColor3 = Color3.fromRGB(26, 26, 26)
Main.Position = UDim2.new(0.4, 0, 0.4, 0)
Main.Size = UDim2.new(0.2, 0, 0.15, 0)
Main.Active = false  -- Отключаем возможность перемещения

UICorner.Parent = Main

Text.Name = "Text"
Text.Parent = Main
Text.BackgroundTransparency = 1.0
Text.Position = UDim2.new(0, 0, 0.1, 0)
Text.Size = UDim2.new(1, 0, 0.3, 0)
Text.Font = Enum.Font.SourceSansBold
Text.Text = "Update Executor!"
Text.TextColor3 = Color3.fromRGB(255, 255, 255)
Text.TextSize = 20
Text.TextWrapped = true

CopyButton.Name = "CopyButton"
CopyButton.Parent = Main
CopyButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
CopyButton.Position = UDim2.new(0.1, 0, 0.5, 0)
CopyButton.Size = UDim2.new(0.8, 0, 0.3, 0)
CopyButton.Font = Enum.Font.SourceSansBold
CopyButton.Text = "Click to copy Link!"
CopyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CopyButton.TextSize = 16
CopyButton.MouseButton1Down:Connect(function()
    setclipboard("https://www.mediafire.com/file/jw2tlkg7ae78xig/AAWave.rar/file")
    CopyButton.Text = "Success!"
    CopyButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)  -- Зеленый цвет
end)

UICorner.Parent = CopyButton
